# URL de connexion PostgreSQL
# Format : postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/linked_me?schema=public"

# Secret pour signer les tokens JWT (utilise une chaîne longue et aléatoire en production)
JWT_SECRET="change-me"

# Durée de vie de l'access token (défaut : 15m)
JWT_ACCESS_EXPIRY="15m"

# Secret pour signer les refresh tokens (doit être différent de JWT_SECRET)
JWT_REFRESH_SECRET="change-me-refresh"

# Durée de vie du refresh token (défaut : 7d)
JWT_REFRESH_EXPIRY="7d"

# Port de l'application
PORT=3000

# Environnement (development | production)
NODE_ENV="development"

# Swagger UI (uniquement en dev, ne jamais activer en prod)
SWAGGER_ENABLED="true"

# CORS : origine autorisée (en prod, mettre l'URL du frontend)
# En dev, laisser vide = toutes les origines autorisées
# CORS_ORIGIN="https://mon-frontend.com"

# Resend (service d'envoi d'emails)
RESEND_API_KEY="re_xxxxx"

# Email expéditeur (doit être vérifié dans Resend, défaut : onboarding@resend.dev)
MAIL_FROM="onboarding@resend.dev"

# URL de l'API (utilisée pour construire les liens dans les emails)
APP_URL="http://localhost:3000"

# URL du frontend (utilisée pour le lien de reset password dans les emails)
# Si absent, APP_URL est utilisé en fallback
# FRONTEND_URL="https://app.linked-me.com"

# Compte admin initial (utilisé par le seed)
ADMIN_EMAIL="admin@linked-me.com"
ADMIN_PASSWORD="change-me"

# Durée de vie (en heures) des comptes non vérifiés avant suppression automatique
UNVERIFIED_USER_TTL_HOURS=24
