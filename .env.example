# URL de connexion PostgreSQL
# Format : postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/linked_me?schema=public"

# Secret pour signer les tokens JWT (utilise une chaîne longue et aléatoire en production)
JWT_SECRET="change-me"

# Port de l'application
PORT=3000

# Environnement (development | production)
NODE_ENV="development"

# CORS : origine autorisée (en prod, mettre l'URL du frontend)
# En dev, laisser vide = toutes les origines autorisées
# CORS_ORIGIN="https://mon-frontend.com"

# Compte admin initial (utilisé par le seed)
ADMIN_EMAIL="admin@linked-me.com"
ADMIN_PASSWORD="change-me"
